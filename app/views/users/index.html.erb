<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/userinfo', {user: @user, bookcreate: @book} %>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <td>image</td>
            <td>name</td>
            <td colspan="3"></td>
          </tr>
        </thead>
        <tbody>
          <% @users.each  do |user| %>
          <tr>
            <td>
              <%= image_tag user.get_image %>
            </td>
            <td><%= user.name %></td>
            <td>
              <%= link_to user_path(user.id) do %>
                Show
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>