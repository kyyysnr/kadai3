<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'userinfo', {user: @user, bookcreate: @bookcreate} %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user_id) do %>
                  <%= image_tag @user.get_image %><br>
                  <%= @user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book.id) do %>
                  <%= @book.title %>
                <% end %>
              </td>
              <td><%= @book.body %></td>
              <% if @book.user_id == current_user.id %>
              <td>
                <%= link_to edit_book_path, class:"btn btn-sm btn-success" do %>
                  Edit
                <% end %>
              </td>
              <td>
                <%= link_to book_path, method: :delete, class:"btn btn-sm btn-danger", data:{confirm:"本当に削除しますか？"} do %>
                  Destroy
                <% end %>
              </td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>